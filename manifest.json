{
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "name": "Cat Fact!",
  "description": "Your oasis for facts about cats.",
  "version": "1.1",

  "browser_action": {
    "default_icon": "assets/images/extension_icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "popup.html"
  },
  "permissions": [
    "alarms",
    "http://catfacts-api.appspot.com/*"
  ],
  "icons": {
    "128": "assets/images/icon128.png"
  }
}
